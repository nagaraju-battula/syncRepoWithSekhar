	<bean id="dataSource"
	     class="org.springframework.jdbc.datasource.DriverManagerDataSource">
	 	<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
	 	<property name="url" value="jdbc:mysql://localhost:3306/demo"></property>
		<property name="username" value="admin" />
	 	<property name="password" value="password" />
	</bean> 
	

	<bean id="accountDao" class="com.snlabs.aarogyatelangana.account.dao.impl.AccountDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="accountService"
		class=" com.snlabs.aarogyatelangana.account.service.impl.AccountServiceImpl">
		<property name="accountDao" ref="accountDao" />
	</bean>

	<bean id="patientDao" class="com.snlabs.aarogyatelangana.account.dao.impl.PatientDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	
	<bean id="patientService"
		class="com.snlabs.aarogyatelangana.account.service.impl.PatientServiceImpl">
		<property name="patientDao" ref="patientDao" />
	</bean>
	
	<bean id="formDao" class="com.snlabs.aarogyatelangana.account.dao.impl.FormDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="formService"
		class="com.snlabs.aarogyatelangana.account.service.impl.FormServiceImpl">
		<property name="formDao" ref="formDao" />
		<property name="patientService" ref="patientService" />
	</bean>
	
	<bean id="downloadDao" class="com.snlabs.aarogyatelangana.account.dao.impl.DownloadDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="downloadService"
		class="com.snlabs.aarogyatelangana.account.service.impl.DownloadServiceImpl">
		<property name="downloadDao" ref="downloadDao" />
	</bean>


</beans>
